<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#527EFF" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="@color/color_aeb9db" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#527EFF" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="@color/color_aeb9db" />
        </shape>
    </item>

</selector>