<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳转到fragment"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_view_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View添加操作"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_fragment_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment添加操作"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="del"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="horizontal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vertical"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_depath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深度动画"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缩放动画"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_rotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旋转动画"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试按钮1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_test2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试按钮2"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_nested_sliding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嵌套滑动"
                android:textAllCaps="false" />

        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        android:background="#D5C0F7" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>